# Example sonar-project.properties
# Copy this to your project root and customize

# Project identification (required)
sonar.projectKey=my-org_my-project
sonar.projectName=My Project
sonar.projectVersion=1.0.0

# Source configuration
sonar.sources=src
sonar.exclusions=**/*.test.ts,**/*.test.tsx,**/__tests__/**,**/node_modules/**,**/*.d.ts,.next/**,dist/**

# Test configuration (optional)
sonar.tests=src
sonar.test.inclusions=**/*.test.ts,**/*.test.tsx,**/__tests__/**

# Coverage report (from Jest/Vitest)
sonar.javascript.lcov.reportPaths=coverage/lcov.info

# TypeScript configuration
sonar.typescript.tsconfigPath=tsconfig.json

# Encoding
sonar.sourceEncoding=UTF-8

# Optional: Language-specific settings
# sonar.language=ts
# sonar.java.binaries=target/classes
# sonar.python.version=3.11
